<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLightSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Light Sensor"
        app:layout_constraintBottom_toTopOf="@id/btnProximitySensor"
        app:layout_constraintEnd_toEndOf="@id/btnProximitySensor"
        app:layout_constraintStart_toStartOf="@id/btnProximitySensor" />

    <Button
        android:id="@+id/btnProximitySensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximity Sensor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGravitySensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gravity Sensor"
        app:layout_constraintEnd_toEndOf="@id/btnProximitySensor"
        app:layout_constraintStart_toStartOf="@id/btnProximitySensor"
        app:layout_constraintTop_toBottomOf="@id/btnProximitySensor" />

</androidx.constraintlayout.widget.ConstraintLayout>